{
    "extends": "stylelint-config-standard",
    "ignoreFiles": [
        "public/**",
        "images/**/*.svg"
    ],
    "rules": {
        "indentation": 2,
        "at-rule-no-unknown": [true, {
            "ignoreAtRules": ["function", "if", "each", "include", "mixin", "use"]
        }],
        "no-eol-whitespace": [true, {
            "ignore": ["empty-lines"]
        }]
    }
}
